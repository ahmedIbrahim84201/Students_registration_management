<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/administrationTab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/msgBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/facultyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="Faculty"
        />
    <EditText
        android:id="@+id/facultyBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type here"
        android:textSize="50px"/>
    <TextView
        android:id="@+id/departmentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="Department"
        />
    <EditText
        android:id="@+id/departmentBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type here"
        android:textSize="50px"/>
    <TextView
        android:id="@+id/lecturerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50px"
        android:text="Lecturer"
        />
    <EditText
        android:id="@+id/lecturerBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type here"
        android:textSize="50px"/>
    <Button
        android:id="@+id/addBtnAdmTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add"/>
    <Button
        android:id="@+id/deleteBtnAdmTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"/>
    <Button
        android:id="@+id/updateBtnAdmTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"/>
    <Button
        android:id="@+id/searchBtnAdmTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"/>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>